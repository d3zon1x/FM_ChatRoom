<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:ViewModelMainWindow}"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" LastChildFill="True">
            <TextBlock DockPanel.Dock="Left" Margin="5" VerticalAlignment="Center">Nick :</TextBlock>
            <TextBox Margin="10" VerticalContentAlignment="Center"></TextBox>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Label Margin="5" VerticalAlignment="Center">Message :</Label>
            <TextBox Margin="5" VerticalContentAlignment="Center"></TextBox>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Button Margin="5" Padding="10,5" 
                    DockPanel.Dock="Right">Send Message</Button>
        </DockPanel>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Margin="5" VerticalAlignment="Center" >Users</TextBlock>
            <ListBox DockPanel.Dock="Left" Margin="5" Width="120">
            </ListBox>
        </DockPanel>
        <TextBlock DockPanel.Dock="Top" TextAlignment="Center">Chat</TextBlock>
        <ListBox Margin="5" ScrollViewer.HorizontalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel HorizontalAlignment="Stretch" LastChildFill="True">
                        <TextBlock Margin="10, 0" DockPanel.Dock="Left"></TextBlock>
                        <TextBlock DockPanel.Dock="Right"></TextBlock>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
